<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_first_level"
    tools:context="edu.ncc.machado.memorygame.FirstLevel"
    android:background="#ffebeb"
    >

    <android.support.v7.widget.Toolbar
        android:backgroundTint="#f97674"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/level1"
        android:textColor="#111111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/my_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="25sp" />


    <ImageButton
        android:background="#ffffff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/defaultsmile"
        android:id="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"/>


    <ImageButton

        android:background="#ffffff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/defaultsmile"
        android:id="@+id/imageButton5"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_toRightOf="@+id/imageButton4"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <ImageButton
        android:background="#ffffff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/defaultsmile"
        android:id="@+id/imageButton2"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <ImageButton
        android:background="#ffffff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/defaultsmile"
        android:id="@+id/imageButton4"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <ImageButton
        android:background="#ffffff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/defaultsmile"
        android:id="@+id/imageButton9"
        android:scaleType="fitXY"
        android:layout_below="@+id/imageButton4"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:background="#ffffff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/defaultsmile"
        android:id="@+id/imageButton10"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_alignLeft="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5" />

    <ImageButton
        android:background="#ffffff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/defaultsmile"
        android:id="@+id/imageButton6"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <ImageButton
        android:background="#ffffff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/defaultsmile"
        android:id="@+id/imageButton7"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imageButton8"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <ImageButton
        android:background="#ffffff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/defaultsmile"
        android:id="@+id/imageButton8"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3" />

    <ImageButton
        android:background="#ffffff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/defaultsmile"
        android:id="@+id/imageButton"
        android:scaleType="fitXY"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2" />


</RelativeLayout>
